# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:password@localhost:5432/devroom"

# ─── Redis (for BullMQ / session store) ───────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── API Server ───────────────────────────────────────────────────────────────
PORT=4000
SESSION_SECRET="change-me-in-production-use-a-long-random-string"
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"
# Optional comma-separated list for browser CORS/websocket origins
CORS_ORIGINS="http://localhost:3000"
# Public URL used in generated invite links (tunnel/deployed URL)
PUBLIC_FRONTEND_URL="http://localhost:3000"

# ─── OpenAI ───────────────────────────────────────────────────────────────────
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o"
# Optional override for lightweight master analysis calls.
OPENAI_FAST_MODEL="gpt-4o-mini"

# ─── Agentic Worker Execution ────────────────────────────────────────────────
# Optional: path to the repository the worker should edit.
# If omitted, defaults to the API process working directory.
AGENT_WORKSPACE_DIR="/absolute/path/to/your/codebase"

# ─── Frontend ─────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL="/api"
# Internal API base for Next.js server rewrites
API_INTERNAL_URL="http://localhost:4000"

# Room repository/workspace settings
ROOM_WORKSPACES_DIR="./room-workspaces"

# Optional: auto-create a GitHub repo per room (if token set)
GITHUB_TOKEN=""
GITHUB_OWNER=""
GITHUB_DEFAULT_VISIBILITY="private"
